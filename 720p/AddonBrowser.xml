<?xml version="1.0" encoding="UTF-8"?>
<window>
    <defaultcontrol always="true">9000</defaultcontrol>
    <controls>
        <control type="list" id="50">
            <visible>true</visible>
            <description>Simple Wide List</description>
            <left>0</left>
            <top>0</top>
            <width>1100</width>
            <height>720</height>

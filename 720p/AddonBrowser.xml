                </control>
                <control type="label">
                    <left>134</left>
                    <top>0</top>
                    <width>900</width>
                    <height>60</height>
                    <font>font_MainMenu</font>
                    <aligny>center</aligny>
                    <textcolor>grey2</textcolor>
                    <selectedcolor>selected</selectedcolor>
                    <align>left</align>
                    <info>ListItem.Label</info>
                </control>
            </itemlayout>
            <focusedlayout width="1000" height="72">
                <control type="image">
                    <left>1</left>
                    <top>1</top>
                    <width>128</width>
                    <height>64</height>
                    <aspectratio scalediffuse="false" align="center" aligny="center">keep</aspectratio>

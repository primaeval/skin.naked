<?xml version="1.0" encoding="UTF-8"?>
<window>
    <defaultcontrol always="true">9000</defaultcontrol>
    <controls>
        <control type="panel" id="50">
            <description>My first list container</description>
            <left>0</left>
            <top>0</top>
            <width>1280</width>
            <height>720</height>
            <visible>true</visible>
            <viewtype label="list">list</viewtype>
            <orientation>horizontal</orientation>
            <pagecontrol>-</pagecontrol>
            <autoscroll>false</autoscroll>
            <scrolltime>0</scrolltime>
            <itemlayout width="640" height="120">
                <control type="image">
                    <left>1</left>
                    <top>1</top>
                    <width>128</width>
                    <height>128</height>
                    <info>ListItem.Icon</info>
                    <colordiffuse>grey</colordiffuse>
                </control>
                <control type="label">
                    <left>128</left>
                    <top>0</top>
                    <width>640</width>
                    <height>128</height>
                    <font>font_MainMenu</font>
                    <aligny>center</aligny>
                    <textcolor>grey2</textcolor>

                    <selectedcolor>selected</selectedcolor>
                    <align>left</align>
                    <info>ListItem.Label</info>
                </control>
            </itemlayout>
            <focusedlayout width="640" height="120">
                <control type="image">
                    <left>1</left>
                    <top>1</top>
                    <width>128</width>
                    <height>128</height>
                    <info>ListItem.Icon</info>
                </control>
                <control type="label">
                    <left>128</left>
                    <top>0</top>
                    <width>640</width>
                    <height>128</height>
                    <font>font_MainMenu</font>
                    <aligny>center</aligny>
                    <textcolor>white</textcolor>

                    <selectedcolor>selected</selectedcolor>
                    <align>left</align>
                    <info>ListItem.Label</info>
                </control>
            </focusedlayout>      
            <content>
                <item id="1">
                    <label>Video</label>
                    <onclick>ActivateWindow(video)</onclick>
                    <icon>movies.png</icon>
                </item>
                <item id="1">
                    <label>Music</label>
                    <onclick>ActivateWindow(music)</onclick>
                    <icon>music.png</icon>
                </item>  
                <item id="1">
                    <label>Programs</label>
                    <onclick>ActivateWindow(programs)</onclick>
                    <icon>genre_soap.png</icon>
                </item>                
                <item id="1">
                    <label>Favourites</label>
                    <onclick>ActivateWindow(favourites)</onclick>
                    <icon>favourites.png</icon>
                </item>

                <item id="1">
                    <label>Addons</label>
                    <onclick>ActivateWindow(addonbrowser)</onclick>
                    <icon>genre_foreign.png</icon>
                </item>
                <item id="1">
                    <label>Settings</label>
                    <onclick>ActivateWindow(settings)</onclick>
                    <icon>settings.png</icon>
                </item>
                <item id="1">
                    <label>Video Playlist</label>
                    <onclick>ActivateWindow(videoplaylist)</onclick>
                    <icon>movies.png</icon>
                </item>                
                <item id="1">
                    <label>Music Playlist</label>
                    <onclick>ActivateWindow(musicplaylist)</onclick>
                    <icon>music.png</icon>
                </item>
                   
                <item id="1">
                    <label>File Manager</label>
                    <onclick>ActivateWindow(filemanager)</onclick>
                    <icon>lists.png</icon>
                </item>
                <item id="1">
                    <label>System Info</label>
                    <onclick>ActivateWindow(systeminfo)</onclick>
                    <icon>settings.png</icon>
                </item>
                <item id="1">
                    <label>Profiles</label>
                    <onclick>ActivateWindow(profiles)</onclick>
                    <icon>genre_family.png</icon>
                </item>
                <item id="1">
                    <label>Power</label>
                    <onclick>ActivateWindow(ShutdownMenu)</onclick>
                    <icon>live.png</icon>
                </item>
          
            </content>      
        </control>
    </controls>   
</window>
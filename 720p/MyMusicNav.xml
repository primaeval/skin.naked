<?xml version="1.0" encoding="UTF-8"?>
<window>
    <defaultcontrol always="true">9000</defaultcontrol>
    <controls>
        <control type="list" id="50">
            <visible>true</visible>
            <description>Simple Wide List</description>
            <left>0</left>
            <top>0</top>
            <width>1100</width>
            <height>720</height>
            <visible>true</visible>
            <viewtype label="list">list</viewtype>
            <orientation>vertical</orientation>
            <pagecontrol>-</pagecontrol>
            <autoscroll>false</autoscroll>
            <scrolltime>0</scrolltime>
            <itemlayout width="1000" height="72">
                <control type="image">
                    <left>1</left>
                    <top>1</top>
                    <width>128</width>
                    <height>64</height>
                    <aspectratio scalediffuse="false" align="center" aligny="center">keep</aspectratio>
                    <info>ListItem.Icon</info>
                </control>
                <control type="label">
                    <left>134</left>
                    <top>0</top>
                    <width>900</width>
                    <height>60</height>
                    <font>font_MainMenu</font>
                    <aligny>center</aligny>
                    <textcolor>grey2</textcolor>
                    <selectedcolor>selected</selectedcolor>
                    <align>left</align>
                    <info>ListItem.Label</info>
                </control>
            </itemlayout>
            <focusedlayout width="1000" height="72">
                <control type="image">
                    <left>1</left>
                    <top>1</top>
                    <width>128</width>
                    <height>64</height>
                    <aspectratio scalediffuse="false" align="center" aligny="center">keep</aspectratio>
                    <info>ListItem.Icon</info>
                </control>
                <control type="label">
                    <left>134</left>
                    <top>0</top>
                    <width>900</width>
                    <height>60</height>
                    <font>font_MainMenu</font>
                    <aligny>center</aligny>
                    <textcolor>white</textcolor>
                    <selectedcolor>selected</selectedcolor>
                    <align>left</align>
                    <info>ListItem.Label</info>
                </control>
            </focusedlayout>
        </control>
        <control type="grouplist" id="51">
            <description>Player Controls</description>
            <left>128r</left>
            <top>0</top>
            <width>128</width>
            <height>720</height>
            <itemgap>0</itemgap>
            <pagecontrol>-</pagecontrol>
            <scrolltime >0</scrolltime>
            <orientation>vertical</orientation>
            <usecontrolcoords>false</usecontrolcoords>
            <visible>true</visible>
            <align>left</align>
            <control type="button" id="601">
                <width>96</width>
                <height>96</height>
                <texturefocus>OSDPrevTrackFO.png</texturefocus>
                <texturenofocus>OSDPrevTrackNF.png</texturenofocus>
                <onclick>PlayerControl(Previous)</onclick>
            </control>
            <control type="button" id="602">
                <width>96</width>
                <height>96</height>
                <texturefocus>OSDRewindFO.png</texturefocus>
                <texturenofocus>OSDRewindNF.png</texturenofocus>
                <onclick>PlayerControl(Rewind)</onclick>
            </control>
            <control type="togglebutton" id="603">
                <width>96</width>
                <height>96</height>
                <texturefocus>OSDPauseFO.png</texturefocus>
                <texturenofocus>OSDPauseNF.png</texturenofocus>
                <usealttexture>Player.Paused | Player.Forwarding | Player.Rewinding</usealttexture>
                <alttexturefocus>OSDPlayFO.png</alttexturefocus>
                <alttexturenofocus>OSDPlayNF.png</alttexturenofocus>
                <onclick>PlayerControl(Play)</onclick>
            </control>
            <control type="button" id="604">
                <width>96</width>
                <height>96</height>
                <texturefocus>OSDStopFO.png</texturefocus>
                <texturenofocus>OSDStopNF.png</texturenofocus>
                <onclick>PlayerControl(Stop)</onclick>
            </control>
            <control type="button" id="605">
                <width>96</width>
                <height>96</height>
                <texturefocus>OSDForwardFO.png</texturefocus>
                <texturenofocus>OSDForwardNF.png</texturenofocus>
                <onclick>PlayerControl(Forward)</onclick>
            </control>
            <control type="button" id="606">
                <width>96</width>
                <height>96</height>
                <texturefocus>OSDNextTrackFO.png</texturefocus>
                <texturenofocus>OSDNextTrackNF.png</texturenofocus>
                <onclick>PlayerControl(Next)</onclick>
            </control>
            <control type="button" id="607">
                <width>96</width>
                <height>96</height>
                <texturefocus>GoFullscreen.png</texturefocus>
                <texturenofocus>GoFullscreen.png</texturenofocus>
                <onclick>fullscreen</onclick>
                <visible>Player.HasMedia</visible>
            </control>
        </control>
    </controls>
</window>